module statics/assignment

imports signatures/assignment-sig

rules
programOk : scope * Start 

rules
   typeOfExp : scope * Exp -> TYPE
   
rules 
   typeOfExp(s ,Int(e))=INT().
   typeOfExp(s ,Str(e))=STR().
//   
//rules 
//   typeOfExp(s,Add(e1,e2))=INT() :-
//     typeOfExp(s,e1)==INT(),
//     typeOfExp(s,e1)==INT().
rules 
   typeOfExp(s,Sub(e1,e2))=INT() :-
     typeOfExp(s,e1)==INT(),
     typeOfExp(s,e1)==INT().
rules 
   typeOfExp(s,Add(e1,e2))=T3 :- {T1 T2}
     typeOfExp(s,e1)==T1,
     typeOfExp(s,e1)==T2,
     add(T1,T2)==T3. 
    add: TYPE * TYPE ->TYPE
    add(INT(),STR())=STR().
     add(INT(),INT())=INT().
     add(STR(),INT())=STR(). 
  